#proposito-home
	path('bg-home.jpg')
	background-position center top
	background-repeat no-repeat
	background-size cover
	color #fff
	margin 0 auto
	max-width $SiteWidth
	padding-bottom 10px
	position relative
	

	.bubble
		position absolute
		font-size 16px
		margin 0
		transitionBase()
		&-a
			path('bubbles-blue-01.png')
			background-repeat no-repeat
			background-size 100%
			left 27px
			padding 50px 33px
			text-align right
			top 114px
			width 293px
			z-index: 2
			
		&-b
			path('bubbles-blue-02.png')
			background-repeat no-repeat
			background-size 100%
			font-size:15px
			padding 40px 28px
			right 40px
			top 284px
			width 281px
			z-index: 2
			
	.section-intro
		position relative
		
		&::after
			path('bubbles-blue-03.png')
			background-repeat no-repeat
			background-size 100%
			content ' '
			display block
			height 307px
			pointer-events none
			position absolute
			right: 59px
			top 200px
			width: 329px
			z-index: 1
	
	.hashtag
		margin-bottom 50px
		margin-top 100px
		
	.logo
		height 122px
		position absolute
		right 94px
		top 60px
		transitionBase()
		width: 118px

		
		img
			img-responsive(block)
			
		

.hashtag
	path('hashtag.png')
	background-repeat no-repeat
	background-size 100%
	height 38px
	margin 1rem auto
	transitionBase()
	width 227px
	
	&-light
		background-position bottom
		



.pilar
	padding-left 10px
	padding-right @padding-left
	color #fff

	
	.container-color
		color #fff
		min-height 200px
		padding 10px
		
		
		h2
			border-bottom 2px solid white
			color #fff
			font-size 16px
			padding 100px 0 10px 0
			position relative
			text-align center
			height 140px
			
			&::before			
				path('pilares-icon-blanco.png')
				background-repeat no-repeat
				background-size 100px
				background-position 50% 0
				content ''
				cuadrado(100px)
				position absolute
				top 0
				left 50%
				transform translateX(-50%)
				
	

	&-desc
		list-style-image url('../images/bullet-home.png')
		font-size 14px
		line-height 1
		text-align justify
		padding 10px
		

		li
			margin 10px auto 20px
			
		
		ul
			list-style-type none
			list-style-image none
		

	&-title
		font-size 14px
		list-style-type none
		padding-left 50px
		
		li
			margin 10px auto 20px
			padding 10px
			position relative
			position relative

			
			&:nth-of-type(1)
				margin-top 20px
				
			&::before
				path('pilares-icon-color.png')
				background-repeat no-repeat
				background-size 47px
				content ' '
				cuadrado(47px)
				left -50px
				position absolute
				display block
				top 0
				
			
		.pilar
			&-comunidad
				background-color $Naranja
				&::before 
					background-position 50% 50%
			&-personas
				background-color darken($Azul[0],20%)
			&-planeta
				background-color $Verde
				&::before 
					background-position 50% 100%
			

	&-comunidades
		.container-color
			background-color rgba($Naranja, 0.85)
			
			h2
				&::before		
					background-position 50% 50%
					

			.btn-white
				box-shadow 0px 0px 0px 0px rgba(0, 0, 0,0.25)

				&:hover
					background-color $Naranja
					box-shadow 0px 0px 5px 0px rgba(0, 0, 0,0.25)
					color white
					
	
	&-personas
		.container-color
			background-color rgba($Azul[0], 0.85)

			.btn-white
				box-shadow 0px 0px 0px 0px rgba(0, 0, 0,0.25)
				
				&:hover
					background-color $Azul[0]
					box-shadow 0px 0px 5px 0px rgba(0, 0, 0,0.25)
					color white
					
			
	&-planeta
		.container-color
			background-color rgba($Verde, 0.85)
			
			h2
				&::before		
					background-position 50% 100%
					

			.btn-white
				box-shadow 0px 0px 0px 0px rgba(0, 0, 0,0.25)
				
				&:hover
					background-color $Verde
					box-shadow 0px 0px 5px 0px rgba(0, 0, 0,0.25)
					color white
					

