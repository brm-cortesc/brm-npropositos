.pilar
	padding-left 10px
	padding-right @padding-left
	color #fff

	
	.container-color
		color #fff
		min-height 200px
		padding 10px
		
		
		h2
			border-bottom 2px solid white
			color #fff
			font-size 16px
			padding 100px 0 10px 0
			position relative
			text-align center
			height 140px
			
			&::before			
				path('pilares-icon-blanco.png')
				background-repeat no-repeat
				background-size 100px
				background-position 50% 0
				content ''
				cuadrado(100px)
				position absolute
				top 0
				left 50%
				transform translateX(-50%)
				
	

	&-desc
		font-size 14px
		line-height 1
		text-align justify
		padding 10px
		

		li
			// list-style-image url('../images/bullet-home.png')
			list-style-image url('/asset-library/PublishingImages/feature/propositos/infografia/bullet-home.png')
			margin 10px auto 20px
			
		
		ul
			list-style-type none
			list-style-image none
			
			li
				list-style-image none


	&-title
		font-size 14px
		list-style-type none
		padding-left 50px
		
		li
			list-style-image none
			margin 10px auto 20px
			padding 10px
			position relative
			

			
			&:nth-of-type(1)
				margin-top 20px
				
			&::before
				path('pilares-icon-color.png')
				background-repeat no-repeat
				background-size 47px
				content ' '
				cuadrado(47px)
				left -50px
				position absolute
				display block
				top 0
				
			
		.pilar
			&-comunidad
				background-color $Naranja
				&::before 
					background-position 50% 50%
			&-personas
				background-color darken($Azul[0],20%)
			&-planeta
				background-color $Verde
				&::before 
					background-position 50% 100%
			

	&-comunidades
		.container-color
			background-color rgba($Naranja, 0.85)
			
			h2
				&::before		
					background-position 50% 50%
					

			.btn-white
				box-shadow 0px 0px 0px 0px rgba(0, 0, 0,0.25)

				&:hover
					background-color $Naranja
					box-shadow 0px 0px 5px 0px rgba(0, 0, 0,0.25)
					color white
					
	
	&-personas
		.container-color
			background-color rgba($Azul[0], 0.85)

			.btn-white
				box-shadow 0px 0px 0px 0px rgba(0, 0, 0,0.25)
				
				&:hover
					background-color $Azul[0]
					box-shadow 0px 0px 5px 0px rgba(0, 0, 0,0.25)
					color white
					
			
	&-planeta
		.container-color
			background-color rgba($Verde, 0.85)
			
			h2
				&::before		
					background-position 50% 100%
					

			.btn-white
				box-shadow 0px 0px 0px 0px rgba(0, 0, 0,0.25)
				
				&:hover
					background-color $Verde
					box-shadow 0px 0px 5px 0px rgba(0, 0, 0,0.25)
					color white
					

