			right 0
			margin 20px auto
			
	#proposito-personas
		.bubble
			&-d,
			&-e,
			&-f,
			&-g
				left 10px
				

				
			&-e
				padding 55px 32px 
				&::before
					content none
				
			&-f
				top 322px
			&-h
				&::after
					content none
					
