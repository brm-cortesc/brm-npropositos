@media (max-width:570px)
	#proposito-comunidades
		h3
			&::before
				bottom -53px
				

		p
			color #fff 

	#proposito-home
		
		p
			color #fff 
			font-size 16px
		
		.bubble
			left 0
			position relative
			right 0
			top 0
			
			&-a
				padding 62px 46px
				width 328px
				
			&-b
				color #fff
				font-size 16px
				padding 69px 28px
				width 340px
				
		.hashtag
			margin-top 50px
		
		.logo
			right 10px
			top @right
		
		.row-content
			margin-top 10px
			
		.section-intro
			&::after
				content none
				

	
	#proposito-comunidades,
	#proposito-planeta
		h3
			&::after
				content none
				

		p
			color #fff 
	
				
	#proposito-personas
		h3
			&::after
				content none
			&::before
				bottom -42px
				
		p
			color #fff
		

		.section
			&-c
				min-height 980px
				
				.text-right
					top unset
					bottom 10px
					width 250px

	ul.pilar-desc,
	ul.pilar-title
		font-size 16px
		line-height 1.2
		

	.pilar
		margin-bottom 50px
		margin-top @margin-bottom
		
		&:nth-of-type(1)
			margin-top 0
			
		.container-color
			h2
				font-size: 22px
				

			.btn
				font-size 18px
				
	#proposito-planeta
		h3
			padding-right 120px
			&::before
				bottom -42px
				

